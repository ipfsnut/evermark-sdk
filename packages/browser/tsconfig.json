{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": false,
    "noEmit": false,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "types": [],
    "typeRoots": [],
    "noResolve": false
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "dist",
    "node_modules", 
    "**/*.test.ts",
    "**/*.spec.ts",
    "README.md",
    "CHANGELOG.md",
    "package.json"
  ],
  "references": [
    { "path": "../core" },
    { "path": "../storage" }
  ]
}